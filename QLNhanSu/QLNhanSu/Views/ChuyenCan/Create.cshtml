@model QLNhanSu.Models.ChuyenCan

@{
    ViewBag.Title = "Điểm danh vắng";
}

<h2>Điểm danh vắng</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Mã nhân viên", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="form-control" style="width:280px">
                <input type="text" value="@ViewBag.nhanVien.MANV" style="outline:none;border:none" readonly name="MANV"/>
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Tên nhân viên", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="form-control" style="width:280px">
                <input type="text" value="@ViewBag.nhanVien.HOTEN" style="outline:none;border:none" readonly />
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LYDO, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.LYDO, new { htmlAttributes = new { @class = "form-control" }, style = "width: 300px; height: 100px;" })
            @Html.ValidationMessageFor(model => model.LYDO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NGAYVANG, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NGAYVANG, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Xác nhận" class="btn btn-danger" />
        </div>
    </div>
</div>
}

<div>
    <a href='@Url.Action("Index", "Luong")' class="btn btn-primary">Quay lại</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
